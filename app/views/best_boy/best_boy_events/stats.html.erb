<%= render "navigation", :referrer => "stats" %>

<div class="span12">
  <div class="well">
    <h3>Statistics</h3>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Event</th>
          <th>overall</th>
          <th>year</th>
          <th>month</th>
          <th>week</th>
          <th>day</th>
        </tr>
      </thead>
      <tbody>
        <% @occurences.keys.each do |key| %>
          <tr>
            <td><%= key.to_s %></td>
            <td><%= @occurences[key][:overall] %></td>
            <td><%= @occurences[key][:yearly] %></td>
            <td><%= @occurences[key][:monthly] %></td>
            <td><%= @occurences[key][:weekly] %> </td>
            <td><%= @occurences[key][:daily] %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th>Total</th>
          <th><%= @this_year_totals[:overall] %></th>
          <th><%= @this_year_totals[:yearly] %></th>
          <th><%= @this_year_totals[:monthly] %></th>
          <th><%= @this_year_totals[:weekly] %></th>
          <th><%= @this_year_totals[:daily] %></th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
<div class="span12">
  <div class="well">
    <h3 class="pull-left">Statistics for <%= current_year %> per month</h3>
    <div class="pull-right">
      <%= form_tag best_boy_admin_stats_path, :method => :get do %>
        <%= hidden_field_tag :owner_type, current_owner_type %>
        <%= select_tag :year, options_for_select(available_years, :selected => current_year), :onchange => "submit();" %>
      <% end %>
    </div>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Event</th>
          <% month_name_array.each do |month| %>
            <th><%= month %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @selected_year_month_reports.keys.each do |event| %>
          <tr>
            <td><%= event %></td>
            <% @selected_year_month_reports[event].keys.each do |month| %>
              <td><%= @selected_year_month_reports[event][month] %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td><strong>Total</strong></td>
          <% @selected_year_totals.keys.each do |month| %>
            <td><%= @selected_year_totals[month] %></td>
          <% end %>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
