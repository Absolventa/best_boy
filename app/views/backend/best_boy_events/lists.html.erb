<%= render "navigation", :referrer => "lists" %>

<div class="span12">
  <div class="well">
    <h3 class="pull-left">Log</h3>
    <div class="pull-right">
      <%= form_tag best_boy_admin_lists_path, :method => :get do %>
        <%= select_tag :event, options_for_select(available_events, :selected => current_event), :onchange => "submit();" %>
      <% end %>
    </div>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Event</th>
          <th>created_at</th>
        </tr>
      </thead>
      <tbody>
        <% collection.each do |best_boy_event| %>
          <tr>
            <td><%= best_boy_event.event %></td>
            <td><%= best_boy_event.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate collection %>
  </div>
</div>